@model IList<SharedVm.OrderVm>
@{
    ViewData["Title"] = "DS đơn hàng";
}

@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <th style="text-align:center">Mã hóa đơn</th>
            <th style="text-align:center">Thời gian lập HĐ</th>
            <th style="text-align:center">Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">@item.Id</td>
                <td style="text-align:center">@item.CraeteDate</td>
                <td style="text-align:center">
                    <a class="btn btn-success" asp-action="Detail" asp-route-Id="@item.Id"><i class="fas fa-info-circle"></i>&nbsp;Chi tiết</a>
                    <a class="btn btn-danger" asp-action="DeleteOrder" asp-route-id="@item.Id"><i class="fas fa-ban"></i>&nbsp;Hủy đơn</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">Bạn chưa có đơn hàng nào.</h5>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Bắt đầu mua sắm</a>
        </div>
    </div>
}