@{
    ViewData["Title"] = "Home Page";
}

@model IList<SharedVm.ProductVm>

<div class="container">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @await Component.InvokeAsync("Category")
        </ul>
    </nav>
    <div class="row">
        <div class="col-9">@await Component.InvokeAsync("Banner")</div>
    </div>
    <br />
    <div class="row">
        @foreach (var product in Model)
        {
            
                <div class="card mb-4 text-center" style="width: 16rem; height: 25rem">
                    <img class="card-img-top" src="@product.ImageLocation[0]" alt="Card image cap" height=200 />
                    <div class="card-body">
                        <h6 class="card-title">@product.Name</h6>
                        <b class="card-text" style="color:red">@product.Price</b>
                    </div>
                    <div class="card-footer">
                        <a type="button" asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-outline-primary">Deatail</a>
                        
                    </div>
                </div>
            
        }
    </div>
</div>